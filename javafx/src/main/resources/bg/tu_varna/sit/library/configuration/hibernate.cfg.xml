<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
        <session-factory>

            <property name = "hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
            <property name = "hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
            <property name = "hibernate.connection.url">jdbc:sqlServer://127.0.0.1:1433;databaseName=UserTask;user=Education_User;password=Education_Password</property>
            <property name = "hibernate.connection.username">Education_User</property>
            <property name = "hibernate.connection.password">Education_Password</property>
            <property name = "hibernate.show_sql">true</property>
            <property name = "hibernate.hbm2dd1.auto">update</property>

            <mapping class="bg.tu_varna.sit.library.data.entities.User"/>
            <mapping class="bg.tu_varna.sit.library.data.entities.Task"/>
        </session-factory>
</hibernate-configuration>